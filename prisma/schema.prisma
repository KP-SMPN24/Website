generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NewsArticle {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  content   String
  author    String
  date      DateTime @default(now())
  imageUrl  String
  category  String
}

model Achievement {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        String
  imageUrl    String
  category    String
}

model Staff {
  id        Int      @id @default(autoincrement())
  name      String
  position  String
  imageUrl  String
  category  String
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
